<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_to_rock_paper_scissors"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/instuctionBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_choose_your_weapon"
            android:textSize="24sp" />

        <Button
            android:id="@+id/playerRockButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickRockButton"
            android:text="@string/rock" />

        <Button
            android:id="@+id/playerPaperButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickPaperButton"
            android:text="@string/paper" />

        <Button
            android:id="@+id/playerScissorsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickScissorsButton"
            android:text="@string/scissors" />

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/playerWeaponChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/computerWeaponChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/winnerAndExplination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>